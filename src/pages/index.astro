---
import { HeroSlider1 } from "@static/images";
import Layout from "../layouts/Layout.astro";
import { Hero } from "@modules/Hero";
---

<Layout
    title="Afonsina - Tuna de Engenharia da Universidade do Minho"
    description="Tuna de Engenharia da Universidade do Minho"
>
    <main class="page-content">
        <Hero
            client:load
            heroType="fullPageSlider"
            data={[
                {
                    subtitle: "Tuna de Engenharia da Universidade do Minho",
                    title: "Afonsina",
                    background: HeroSlider1.src,
                    paragraph:
                        "Em março de 1994, estudantes da Universidade do Minho fundaram a Afonsina no “Café Óscar” em Guimarães. Desde então, a Tuna participa em eventos nacionais e internacionais e organiza o festival \"Cidade Berço\" com tunas de prestígio.",
                    button: {
                        text: "Sobre a tuna",
                        link: "/historia",
                    }
                }
            ]}
        />
    </main>
</Layout>
