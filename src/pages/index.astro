---
import Default from "@/layouts/Default.astro";
import About from "@/components/index/About.astro";
import Home from "@/components/index/Home.astro";
import CBMarketing from "@/components/index/CBMarketing.svelte";

const cbMode: boolean = import.meta.env.CB_MODE === 'true';
---

<Default preloadImage={ [import.meta.env.PUBLIC_DEFAULT_TUNO] }>
  <!-- CBMarketing ================================================== -->
  <CBMarketing mode={ cbMode }/>
  <!-- end CBMarketing -->

	<!-- home ================================================== -->
  <Home />
  <!-- end home -->

  <!-- about ================================================== -->
  <About />
  <!-- end about -->

</Default>
