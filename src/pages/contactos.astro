---
import ContainedWithTitle from "@/layouts/ContainedWithTitle.astro";
import { contacts } from "db";
---

<ContainedWithTitle title="Contactos">

<div  class="pt-4 text-xl">
  <p class="text-2xl mb-3" set:html={contacts.address}></p>
  <h5 class="text-2xl">Email: </h5>
  <p class="mb-3">
      { contacts.email }
  </p>
  <h5 class="text-2xl">Telem√≥vel: </h5>
  <p class="mb-3">
      { contacts.mobile }
  </p>
</div>
<br>
<div class="grid grid-flow-row text-white text-xl">
  <h3 class="text-3xl md:text-5xl my-3">Social</h3>
  <a href={ contacts.facebook } target="_blank" class="link">Facebook</a>
  <a href={ contacts.instagram } target="_blank" class="link">Instagram</a>
  <a href={ contacts.spotify } target="_blank" class="link">Spotify</a>
  <a href={ contacts.youtube } target="_blank" class="link">YouTube</a>
</div>
</ContainedWithTitle>
